<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/accomodation" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/image"
        android:layout_toRightOf="@id/image"
        android:text="Abhishek Dewangan"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_below="@+id/title"
        android:layout_marginTop="3dp"
        android:text="(Accommodation) Rs 40000"
        android:textColor="@color/subtextColor"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutCancel"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".50"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCancel"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:src="@mipmap/close"
                android:tint="@color/notificationtint" />

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="Cancel"
                android:textColor="@color/subtextColor"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPaid"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight=".50"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPaid"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:src="@mipmap/right"
                android:tint="@color/notificationtint" />

            <TextView
                android:id="@+id/tvPaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="PAID"
                android:textColor="@color/subtextColor"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>